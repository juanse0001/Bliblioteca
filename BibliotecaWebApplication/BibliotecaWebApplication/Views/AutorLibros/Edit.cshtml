@model BibliotecaWebApplication.Models.AutorLibro

@{
    ViewData["Title"] = "Edit AutorLibro";
}

<h1>Edit AutorLibro</h1>

<h4>Editar relación Autor - Libro</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="AutorId" />
            <input type="hidden" asp-for="LibroId" />

            <!-- Dropdown para seleccionar Autor -->
            <div class="form-group">
                <label asp-for="AutorId" class="control-label">Autor</label>
                <select asp-for="AutorId" class="form-control" asp-items="ViewBag.AutorId"></select>
            </div>

            <!-- Dropdown para seleccionar Libro -->
            <div class="form-group">
                <label asp-for="LibroId" class="control-label">Libro</label>
                <select asp-for="LibroId" class="form-control" asp-items="ViewBag.LibroId"></select>
            </div>

            <!-- Botón de guardar cambios -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
