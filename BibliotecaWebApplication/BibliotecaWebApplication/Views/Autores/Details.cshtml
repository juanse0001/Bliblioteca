@model BibliotecaWebApplication.Models.Autor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nacionalidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nacionalidad)
        </dd>
    </dl>
</div>


<div class="row">
    <h4>Libros Escritos</h4>
    <ul class="list-group list-group-flush">
        @if (Model.AutorLibros.Any())
        {
            foreach (var autorlibro in Model.AutorLibros)
            {
                <li class="list-group-item d-flex align-items-center">
                    <span class="badge text-primary me-2">
                        <i class="bi bi-book"></i>
                    </span>
                    @autorlibro.Libro.Titulo
                </li>
            }
        }
        else
        {
            <li class="list-group-item">Este autor no tiene libros asociados.</li>
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AutorId" class="btn btn-sm btn-warning me-2">
        <i class="bi bi-pencil-square"></i> Edit
    </a>

    <a asp-action="Index" class="btn btn-sm btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to list
    </a>
</div>

