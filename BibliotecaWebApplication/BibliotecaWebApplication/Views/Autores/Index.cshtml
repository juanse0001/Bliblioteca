@model IEnumerable<BibliotecaWebApplication.Models.Autor>

@{
    ViewData["Title"] = "Autores";
}

<h1>Autores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
</p>

<table id="autoresTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
            <th>@Html.DisplayNameFor(model => model.Nombres)</th>
            <th>@Html.DisplayNameFor(model => model.Nacionalidad)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                <td>@Html.DisplayFor(modelItem => item.Nacionalidad)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AutorId" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square">Edit</i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.AutorId" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle">Details</i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.AutorId" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash-fill">Delete</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#autoresTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "lengthChange": true,
                "pageLength": 10
            });
        });
    </script>
}
