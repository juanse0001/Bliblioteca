@model IEnumerable<BibliotecaWebApplication.Models.Libro>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center my-5">Libros</h1>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ISBN)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumeroPaginas)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ISBN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumeroPaginas)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.LibroId" class="btn btn-outline-primary btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.LibroId" class="btn btn-outline-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.LibroId" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>